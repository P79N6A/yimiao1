<script>
    
    function _del(){
         
         if($("[name=ids]:checked").length==0){
           alert("至少选中一个");     
	 }
	 else{
             if(confirm("确定删除吗?")){
		    // 提交表单
		   $("#form1").submit();
	     } 
	 }
    }


    $(document).ready(function(){
          
	  var datas=JSON.parse('<%-JSON.stringify(datas)%>');

	  for(var i=0;i<datas.length;i++){
             var tr="<tr>"  +
	            "<td><input type=checkbox name=ids value="+datas[i].eid+"  /></td>"+
		    "<td>"+(i+1)+"</td><td>"+datas[i].ename+"</td> <td>"+datas[i].sex+"</td>" +
		    "<td>"+datas[i].age+"</td>"+
		    "<td>"+datas[i].birth+"</td>"+
		    "<td>"+datas[i].tel+"</td>"+
		    "<td>"+datas[i].shenfen+"</td>"+
		    "<td> <a href=\"/emp/queryone?a="+datas[i].eid+"\">修改</a>&nbsp;&nbsp;"+
		    "<a href=\"javascript:_test('"+datas[i].eid+"','"+datas[i].ename+"')\">测试</a></td> </tr>";

	          
	            $("#tb1").append(tr);
	  }  

    }); 


    function  _test(eid,ename){
       alert(eid+"----"+ename);

    }
</script>

